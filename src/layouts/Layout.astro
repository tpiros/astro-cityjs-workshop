---
import Head from './Head.astro';
import Nav from './Nav.astro';
const { title = 'Just a title', description = 'A classic description ...' } =
  Astro.props;

import Footer from './Footer.astro';
---

<html lang="en">
  <Head {title} {description} />
  <body>
    <Nav />
    <div
      class="bg-white my-5 w-full flex flex-col space-y-4 md:space-x-4 md:space-y-0"
    >
      <main class="bg-sky-300 px-5 py-40">
        <div class="text-2xl md:text-4xl"><slot /></div>
      </main>
    </div>
    <Footer />
  </body>
</html>
